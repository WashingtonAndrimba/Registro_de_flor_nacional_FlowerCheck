<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo7"
    android:id="@+id/drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnMostrarMenu"
            style="@style/Base.Theme.RFN"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="#2269E3"
            android:onClick="mostrarMenu"
            app:srcCompat="@drawable/baseline_keyboard_double_arrow_right_24" />


        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="646dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="408dp"
                android:layout_height="207dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/flowercheklogo"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aladin"
                android:text="Menú de Opciones"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <Button
                android:id="@+id/btnRegistro"
                style="@style/MenuButtonStyle"
                android:layout_width="171dp"
                android:fontFamily="@font/aladin"
                android:insetTop="4dp"
                android:text="Registro de flor nacional"
                android:textSize="18dp"
                app:icon="@drawable/register" />

            <Button
                android:id="@+id/btnConsultarActualizar"
                style="@style/MenuButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Consultar y Actualizar"
                android:textSize="18dp"
                app:icon="@drawable/update" />

            <Button
                android:id="@+id/btnReporte"
                style="@style/MenuButtonStyle"
                android:fontFamily="@font/aladin"
                android:text="Reportes"
                android:textSize="18dp"
                app:icon="@drawable/report" />


        </LinearLayout>
    </RelativeLayout>

    <!-- Menú lateral -->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/fondo13"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textVie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aladin"
            android:text="MAS OPCIONES"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aladin"
            android:text="Registro de informacion avanzada"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <Button
            android:id="@+id/btnOpcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="accionOpcion1"
            android:text="Registrar Finca" />

        <Button
            android:id="@+id/btnOpcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="accionOpcion2"
            android:text="Registrar Variedad" />

        <Button
            android:id="@+id/btnOpcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="accionOpcion3"
            android:text="Registrar Enfermedad" />

        <Button
            android:id="@+id/btnOpcion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="accionOpcion4"
            android:text="Registrar Usuario Administrativo" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aladin"
            android:text="Cosulta y actualizacion"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <Button
            android:id="@+id/btnConsultarFincasPorNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Finca" />

        <Button
            android:id="@+id/btnConsultarVariedadPorNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Variedades" />

        <Button
            android:id="@+id/btnConsultarEnfermedadPorNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Enfermedades" />
        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aladin"
            android:text="Vender o comprar"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />
        <Button
            android:id="@+id/btnVenderComprar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vender o comprar" />

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
