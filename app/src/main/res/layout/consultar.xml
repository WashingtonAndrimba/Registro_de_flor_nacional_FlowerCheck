<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondorfn">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="713dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- ... rest of your layout ... -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="120sp"
                android:fontFamily="@font/aladin"
                android:text="Consultar y Actualizar"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Seleccione la finca"
            android:textColor="#000000"
            android:textSize="16sp"
            android:translationY="20dp" />

        <Spinner
            android:id="@+id/spFincaConsulta"
            android:layout_width="132dp"
            android:layout_height="51dp"
            android:translationX="100dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/tvVariedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Seleccione variedad"
            android:textColor="#000000"
            android:textSize="16sp"
            android:translationY="20dp" />

        <Spinner
            android:id="@+id/spVariedadConsulta"
            android:layout_width="129dp"
            android:layout_height="52dp"
            android:translationX="100dp"
            android:translationY="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConsultar1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/aladin"
                android:text="Consultar"
                android:textAlignment="center"
                android:textSize="24sp"

                app:icon="@drawable/buscar"
                app:iconSize="30dp"
                app:iconTint="#000000"
                app:strokeWidth="@dimen/cardview_default_elevation" />

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="@font/aladin"
                android:text="Actualizar"
                android:textAlignment="center"

                android:textSize="24sp"
                app:icon="@drawable/update"
                app:iconSize="30dp"
                app:iconTint="@color/black"
                app:strokeWidth="@dimen/cardview_default_elevation" />

            <EditText
                android:id="@+id/editTextIDActualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="ID"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedorDeFilas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Encabezado de la tabla -->


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>