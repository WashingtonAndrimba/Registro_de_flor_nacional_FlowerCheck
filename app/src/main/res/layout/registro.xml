<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoregflor">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="731dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/archivo_black"
                android:text="Registro de Flor Nacional"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="@color/black"
                android:textSize="28dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFecha"
                android:layout_width="60dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showDatePickerDialog"
                android:src="@drawable/ic_calendar" />

            <EditText
                android:id="@+id/etdFecha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:focusable="false"
                android:hint="Ingrese la fecha"
                android:inputType="none"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="208dp"
            android:layout_height="34dp"
            android:fontFamily="@font/aladin"
            android:text="Seleccione la finca:"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/spFinca"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Seleccione el Area:"
            android:textColor="#000000"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/spArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/areas" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Seleccione el bloque:"
            android:textColor="#000000"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/spBloque"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/bloques"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Seleccione la variedad:"
            android:textColor="#000000"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/spVariedad"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:text="Seleccione la enfermedad:"
            android:textColor="#000000"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/spEnfermedad"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:text="Ingrese la cantidad:"
                android:textColor="#000000"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/etCantidadRegistro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/aladin"
                android:hint="Cantidad"
                android:inputType="number"

                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:isScrollContainer="false"
            android:maxWidth="200dp"
            android:minHeight="55dp"
            android:text="Guadar"
            android:textAlignment="center"
            android:textSize="24sp"
            android:translationX="125dp"
            android:translationY="20dp"
            app:icon="@drawable/guardar"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="#000000"
            app:strokeColor="#000000" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="146dp"
        android:layout_height="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/flowercheklogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>